{
  "name": "I'm in a meeting!",
  "description": "Automatically changes the color of a Phillips Hue light when you're in a Google Meet meeting.",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://discovery.meethue.com/"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "constants.js",
        "scripts/meet-detector.js"
      ]
    }
  ]
}