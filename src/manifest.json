{
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "version": "0.0.2",
  "manifest_version": 3,
  "icons": {
    "96": "icons/icon96.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://discovery.meethue.com/",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "96": "icons/icon96.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "constants.js",
        "scripts/meet-detector.js"
      ]
    }
  ]
}
